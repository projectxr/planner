{
	"name": "planner",
	"version": "0.3.0",
	"description": "Simple Living",
	"main": "app.ts",
	"scripts": {
		"server": "nodemon app.ts",
		"front": "npm start --prefix front",
		"dev": "concurrently \"npm run server\" \"npm run front\"",
		"start": "ts-node app.ts",
		"build": "tsc -p . && copyfiles -u 1 config/production.json dist/config/",
		"migrate": "ts-node ./migrations/index.ts migrate",
		"migrate:rollback": "ts-node ./migrations/index.ts rollback"
	},
	"author": "projectxr",
	"dependencies": {
		"@babel/runtime": "^7.9.2",
		"@sendgrid/mail": "^7.4.6",
		"bcryptjs": "^2.4.3",
		"config": "^3.3.1",
		"cors": "^2.8.5",
		"express": "^4.17.1",
		"express-validator": "^6.4.0",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.9.7",
		"nanoid": "^3.1.20",
		"nodemailer": "^6.4.11",
		"pg": "^8.5.1",
		"pg-hstore": "^2.3.3",
		"sequelize": "^6.6.2",
		"socket.io": "^4.1.3"
	},
	"devDependencies": {
		"@types/bcryptjs": "^2.4.2",
		"@types/config": "0.0.39",
		"@types/express": "^4.17.13",
		"@types/jsonwebtoken": "^8.5.4",
		"@types/node": "^16.6.1",
		"@types/nodemailer": "^6.4.4",
		"@types/validator": "^13.6.3",
		"babel-loader": "8.1.0",
		"babel-plugin-lodash": "^3.3.4",
		"babel-plugin-react-transform": "^3.0.0",
		"concurrently": "^5.1.0",
		"copyfiles": "^2.4.1",
		"mocha": "^7.1.1",
		"nodemon": "^2.0.2",
		"rimraf": "^3.0.2",
		"ts-node": "^10.2.0",
		"typescript": "^4.3.5"
	}
}
